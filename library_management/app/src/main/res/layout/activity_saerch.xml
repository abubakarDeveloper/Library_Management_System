<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="54dp"
        tools:context=".SaerchActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_main"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="Main"
                android:layout_margin="2dp"
                android:background="@drawable/bg"
                android:layout_centerHorizontal="true"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:padding="4dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                android:layout_below="@+id/btn_main">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_dept"
                        android:layout_width="284dp"
                        android:layout_height="wrap_content"
                        android:hint="Department"
                        android:layout_margin="2dp"
                        android:layout_alignParentLeft="true"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"/>
                    <Button
                        android:id="@+id/btn_search_dept"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:layout_toRightOf="@+id/et_dept"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:padding="4dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                android:layout_below="@+id/cv_dept">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_cat"
                        android:layout_width="284dp"
                        android:layout_height="wrap_content"
                        android:hint="Category"
                        android:layout_margin="2dp"
                        android:layout_alignParentLeft="true"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"/>
                    <Button
                        android:id="@+id/btn_search_cat"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:layout_toRightOf="@+id/et_cat"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_cat"
                android:layout_marginTop="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_cat"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_cat"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
