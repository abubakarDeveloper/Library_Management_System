<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IssuedBookActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Book Name"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tv_issue_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ISSUE"
                    android:layout_toRightOf="@+id/tv_book_name"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tv_return_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="RETURN"
                    android:layout_toRightOf="@+id/tv_issue_date"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tv_fine"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="FINE"
                    android:layout_alignParentRight="true"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"

                    android:textAlignment="center"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_one"/>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>